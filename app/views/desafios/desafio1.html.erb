<div data-controller="desafio1">
  <div class="container mt-2">
    <%= render "layouts/desafios/header" %>
    <div class="row mt-4 text-center">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-body">
            <%= turbo_frame_tag "versiculo" do %>
              <h2 id="textoVersiculo">Clique para começar</h2>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-4 text-center">
      <div class="container">
        <div class="row">
          <div class="col">
            <%= link_to "Começar", desafios_versiculo_path,
              class: "btn btn-success", id: "btnStart",
              data: {
                turbo_frame: "versiculo",
                action: "click->desafio1#startChallenge"
              } %>
          </div>
          <div class="col">
            <%= link_to "Terminar", nil,
              class: "btn btn-danger disabled", id: "btnStop",
              data: {
                action: "click->desafio1#stopChallenge"
              } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
